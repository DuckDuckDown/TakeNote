<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakeNote.Views.RegisterPage"
             Title="RegisterPage" Disappearing="ClearFields">
    
    
    
    <VerticalStackLayout  WidthRequest="400" 
                          Margin="0,200,0,0" 
                          Spacing="30"
                          >
            <Entry x:Name="nUsername"
       Placeholder="Enter Username"
        />

            <Entry x:Name="nPassword"
       Placeholder="Enter Password"
        />

        <Entry x:Name="email"
       Placeholder="Enter Email"
        />

        <HorizontalStackLayout Spacing="5">
                <CheckBox x:Name="eula_chkbx"/>
                <Label Text="Agree to terms and services CheckBox"/>
        </HorizontalStackLayout>

        <Button Text="Register" Clicked="register_btn"/>


    </VerticalStackLayout>
</ContentPage>